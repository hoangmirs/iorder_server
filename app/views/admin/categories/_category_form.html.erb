<%= form_for [:admin, category] do |f| %>
  <div class="box-body">
    <div class="form-group <%= 'has-error' if category.errors.details[:name].any?; %>">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
      <span class="help-block"><%= category.errors.full_messages_for(:name).join("\n") %></span>
    </div>
    <div class="form-group <%= 'has-error' if category.errors.details[:description].any? %>">
      <%= f.label :description %>
      <%= f.text_field :description, class: "form-control" %>
      <span class="help-block"><%= category.errors.full_messages_for(:description).join("\n") %></span>
    </div>
    <div class="form-group <%= 'has-error' if category.errors.details[:image].any? %>">
      <%= f.label :image %>
      <%= f.file_field :image, class: "form-control file-input" %>
      <span class="help-block"><%= category.errors.full_messages_for(:image).join("\n") %></span>
      <%= image_tag f.object.image, class: "category-image-preview img-thumbnail" %>
    </div>
  </div>
  <div class="box-footer">
    <button type="submit" class="btn btn-primary pull-right"><%= yield :submit_button %></button>
  </div>
<% end %>
<%= content_for :specific_page_js do %>
  <script type="text/javascript">
    <%= render "admin/shared/fileinput.js" %>
  </script>
  <%= javascript_include_tag "fileinput" %>
<% end %>
