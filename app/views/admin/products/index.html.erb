<div class="content">
  <div class="box">
    <div class="box-header with-border">
      <h3 class="box-title"><%= t ".header" %></h3>
      <div class="pull-right">
        <%= link_to new_admin_product_path, class: "btn btn-block btn-success" do %>
          <i class="fa fa-plus"></i>
          <%= t ".create_button" %>
        <% end %>
      </div>
    </div>
    <div class="box-body table-responsive">
      <table class="table table-bordered table-hover">
        <tbody>
          <tr>
            <th width="10%" class="text-center"><%= t ".id" %></th>
            <th width="30%"><%= t ".category_name" %></th>
            <th width="30%"><%= t ".name" %></th>
            <th width="10%" class="text-center"><%= t ".product_image" %></th>
            <th width="20%" class="text-center"><%= t ".actions" %></th>
          </tr>
          <%= render @products %>
        </tbody>
      </table>
    </div>
    <div class="box-footer clearfix">
      <%= paginate @products %>
    </div>
  </div>
</div>
